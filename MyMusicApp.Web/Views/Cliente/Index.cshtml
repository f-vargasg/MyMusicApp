@model MyMusicApp.Web.ViewModel.SucursalProductoVM

@{


    if (Model.Error == null)
    {
        ViewData["Title"] = "Información Producto";
        <h1>
            Esta es la sucursal  @Html.DisplayFor(model => model.Sucursal.DirSucursal) (@Html.DisplayFor(model => model.Sucursal.HorarioSucursal))
        </h1>

        <h2>
            Información del producto @Html.DisplayFor(model => model.Producto)
        </h2>
        <br />
        <!--
        <div>
            <b>@Html.LabelFor(model => model.Producto.CantidadInventario)</b> @Html.DisplayFor(model => model.Producto.CantidadInventario)
        </div>
        <div>
            <b>@Html.LabelFor(model => model.Producto.PrecioUnitario)</b> @Html.DisplayFor(model => model.Producto.PrecioUnitario)
        </div>
        <div>
            <b>@Html.LabelFor(model => model.Producto.TipoProducto)</b> @Html.DisplayFor(model => model.Producto.TipoProducto)
        </div>
        -->
        <div>
            <b>@Html.LabelFor(model => model.Producto.CantidadInventario)</b> @Html.TextBoxFor(model => model.Producto.CantidadInventario)
        </div>
        <div>
            <b>@Html.LabelFor(model => model.Producto.PrecioUnitario)</b> @Html.TextBoxFor(model => model.Producto.PrecioUnitario)
        </div>
        <div>
            <b>@Html.LabelFor(model => model.Producto.TipoProducto)</b> @Html.TextBoxFor(model => model.Producto.NombreProducto)
        </div>
    }
    else
    {
        ViewData["Title"] = "Información Producto - Error";
        <h1>Ha ocurrido un error</h1>
        <br />
        <h2>@Html.DisplayFor(model => model.Error.MensajeError) </h2>
    }
}
