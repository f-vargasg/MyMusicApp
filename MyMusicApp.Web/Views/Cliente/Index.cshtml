@model MyMusicApp.Web.ViewModel.SucursalProductoVM

@{


    if (Model.Error == null)
    {
        ViewData["Title"] = "Información Producto";
        // <div> El usuario conectado es @Model.Sucursal.Mensaje </div>
        <div class="alert alert-success" >  @ViewBag.Usuario </div>
        <div class="alert alert-info">  @ViewBag.TiempoConexion </div>
        <div class="jumbotron jumbotron-fluid">
            <div class="container" style="background-color:lightgreen">
                <h4 class="display-4">
                    @Html.DisplayFor(model => model.Sucursal.DirSucursal)
                </h4>
                <div>El horario de la sucursal es:  @Html.DisplayFor(model => model.Sucursal.HorarioSucursal)</div> 
            </div>
            
        </div>
        <div class="card">
            <div class="card-header">
                @Html.DisplayFor(model => model.Producto.NombreProducto)
            </div>
            <div class="card-body">
                <div class="card-text"><b>@Html.LabelFor(model => model.Producto.CantidadInventario)</b> @Html.DisplayFor(model => model.Producto.CantidadInventario) </div>
                <div class="card-text"> <b>@Html.LabelFor(model => model.Producto.TipoProducto)</b> @Html.DisplayFor(model => model.Producto.TipoProducto) </div>
            </div>
            <div class="card-footer alert-dark">
                <b>@Html.LabelFor(model => model.Producto.PrecioUnitario)</b> @Html.DisplayFor(model => model.Producto.PrecioUnitario)
            </div>
        </div>
        
    }
    else
    {
        ViewData["Title"] = "Información Producto - Error";
        <h1>Ha ocurrido un error</h1>
        <br />
        <h2>@Html.DisplayFor(model => model.Error.MensajeError) </h2>
    }
}
