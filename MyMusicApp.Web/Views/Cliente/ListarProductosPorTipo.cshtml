@model MyMusicApp.Web.ViewModel.SucursalProductoVM

@{
    if (Model.Error == null)
    {
        ViewData["Title"] = "Información de productos por tipo";
        @*<div> El usuario conectado es @Model.Sucursal.Mensaje </div>*@
        <div> El usuario conectado es @ViewData["Usuario"] </div>
        <h1>
            Lista de productos por tipo
        </h1>
        for (int i = 0; i < Model.ListadoProductos.Count; i++)
        {
            <div>
                <b>@Html.LabelFor(model => model.ListadoProductos[i].IdEntidad)</b>

            </div>
            <br />
            <div>
                @Html.DisplayFor(model => model.ListadoProductos[i].NombreProducto)
            </div>
        }
    }
    else
    {
        ViewData["Title"] = "Información Producto - Error";
        <h1>Ha ocurrido un error</h1>
        <br />
        <h2>@Html.DisplayFor(model => model.Error.MensajeError) </h2>
    }


}
