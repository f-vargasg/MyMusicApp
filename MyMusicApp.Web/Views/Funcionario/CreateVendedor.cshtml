@model MyMusicApp.DTO.VendedorDTO

@{
    ViewData["Title"] = "CreateVendedor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>CreateVendedor</h1>

<h4>VendedorDTO</h4>
<h2>  @ViewBag.PuestoVendedor</h2>
<hr />
<br />
<h5>@ViewBag.FechaHora</h5>

<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateVendedor">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NombreVendedor" class="control-label"></label>
                <input asp-for="NombreVendedor" class="form-control" />
                <span asp-validation-for="NombreVendedor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Puesto" class="control-label"></label>
                <input asp-for="Puesto" class="form-control" />
                <span asp-validation-for="Puesto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UsuarioVendedor" class="control-label"></label>
                <input asp-for="UsuarioVendedor" class="form-control" />
                <span asp-validation-for="UsuarioVendedor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClaveVendedor" class="control-label"></label>
                <input asp-for="ClaveVendedor" class="form-control" />
                <span asp-validation-for="ClaveVendedor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CedulaVendedor" class="control-label"></label>
                <input asp-for="CedulaVendedor" class="form-control" />
                <span asp-validation-for="CedulaVendedor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
